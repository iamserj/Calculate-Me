<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 xmlns:app="http://schemas.android.com/apk/res-auto"
			 tools:ignore="NestedWeights"
			 tools:context=".MainActivity"
			 android:layout_height="match_parent"
			 android:layout_width="match_parent"
			 android:background="@android:color/background_dark">

	<ImageView android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:background="@drawable/background_round_rect"
			   android:layout_margin="5dp"/>


	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:layout_margin="5dp"
				  android:padding="16dp"
				  android:orientation="vertical">


		<TextView android:id="@+id/txtDisplay"
				  android:layout_width="match_parent"
				  android:layout_height="0dp"
				  android:layout_weight="1"
				  android:textSize="@dimen/result_text_size"
				  android:singleLine="true"
				  android:gravity="center|end"
				  android:text="@string/zero"
				  android:ellipsize="start"
				  android:scrollHorizontally="true"
				  android:background="@drawable/display_bg"
				  android:padding="4dp"
				  android:layout_marginTop="50dp"
				  android:layout_marginBottom="50dp"
				  android:fontFamily="@font/digital7"/>


		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="0dp"
					  android:layout_weight="1"
					  android:orientation="horizontal">

			<Button android:id="@+id/buttonClear"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_green"
					android:text="@string/clear"
					android:textSize="@dimen/btn_clear_text_size"/>

			<Button android:id="@+id/buttonBrackets"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_green"
					android:text="@string/brackets"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonInvert"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_green"
					android:text="@string/invert"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonDivide"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_green"
					android:text="@string/div"
					android:textSize="@dimen/btn_text_size"/>
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="0dp"
					  android:layout_weight="1"
					  android:orientation="horizontal">

			<Button android:id="@+id/button7"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/seven"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/button8"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/eight"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/button9"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/nine"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonMultiply"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_green"
					android:text="@string/mul"
					android:textSize="@dimen/btn_text_size"/>
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="0dp"
					  android:layout_weight="1"
					  android:orientation="horizontal">

			<Button android:id="@+id/button4"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/four"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/button5"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/five"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/button6"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/six"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonSubtract"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_green"
					android:text="@string/sub"
					android:textSize="@dimen/btn_text_size"/>
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="0dp"
					  android:layout_weight="1"
					  android:orientation="horizontal">

			<Button android:id="@+id/button1"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/one"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/button2"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/two"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/button3"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/three"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonAdd"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_green"
					android:text="@string/add"
					android:textSize="@dimen/btn_text_size"/>
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="0dp"
					  android:layout_weight="1"
					  android:orientation="horizontal">

			<Button android:id="@+id/button0"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/zero"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonDot"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/dot"
					android:textFontWeight="700"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonBackspace"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_blue"
					android:text="@string/backspace"
					android:textSize="@dimen/btn_text_size"/>

			<Button android:id="@+id/buttonEqual"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_margin="@dimen/btn_between_margins"
					android:background="@drawable/bt_gradient_rounded_orange"
					android:text="@string/equal"
					android:textSize="@dimen/btn_text_size"/>
		</LinearLayout>

	</LinearLayout>
</FrameLayout>