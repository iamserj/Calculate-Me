<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="android:Theme.Black.NoTitleBar">
			<!-- Customize your theme here. -->
	</style>

	<style name="AppTheme1" parent="android:Theme.Holo.Light.DarkActionBar">
		<!-- Customize your theme here. -->
	</style>

	<style name="Button">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_margin">@dimen/bt_between_margins</item>
		<item name="android:fontFamily">@font/roboto_light_subset</item>
	</style>

	<style name="Button.Operator" parent="Button">
		<item name="android:background">@drawable/bt_rounded_green</item>
		<item name="android:textSize">@dimen/bt_operator_text_size</item>
	</style>

	<style name="Button.Operator.Clear" parent="Button.Operator">
		<item name="android:background">@drawable/bt_rounded_red</item>
		<item name="android:textSize">@dimen/bt_operator_text_size</item>
	</style>

	<style name="Button.Operator.Equal" parent="Button.Operator">
		<item name="android:background">@drawable/bt_rounded_orange</item>
		<item name="android:textSize">@dimen/bt_operator_text_size</item>
	</style>

	<style name="Button.Numeric" parent="Button">
		<item name="android:background">@drawable/bt_rounded_blue</item>
        <item name="android:textSize">@dimen/bt_numeric_text_size</item>
        <!--item name="android:fontFamily">@font/digital7</item-->
	</style>

	<style name="Button.Background" parent="Button">
		<item name="android:background">@drawable/bt_rounded_black_background</item>
		<item name="android:textSize">@dimen/bt_numeric_text_size</item>
	</style>

</resources>